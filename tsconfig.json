{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"types": [ "node" ],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true,
	}
}